<div class="form-container">
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>
          Log in
        </h1>
      </div>
    
      <div class="form-group">
        <%= f.label :email, class: 'form-text' %>
        <br>
        <%= f.email_field :email, autofocus: true, class: 'input-default' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'form-text' %>
        <br>
        <%= f.password_field :password, autocomplete: "off", class: 'input-default' %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-checkbox-group">
        <%= f.label :remember_me, class: 'form-text' %>
        <%= f.check_box :remember_me, class: 'input-checkbox' %>
      </div>
    <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'register-red-btn' %>
      </div>
    <% end %>
  </div>
</div>